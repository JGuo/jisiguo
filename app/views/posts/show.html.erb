<div class="post-cover image-cover" <% if @post.photo? %>style="background-image:url(&quot;<%= ActionController::Base.helpers.asset_path(@post.photo) %>&quot;);"<% end %>></div>
<article class="post">
	<div class="show-post-date">
		<span class="stamp-month"><%= @post.created_at.localtime.strftime("%b") %></span>
		<span class="stamp-date"><%= @post.created_at.localtime.day %></span>
		<a href="https://twitter.com/share?url=<%= url_encode(request.original_url) %>&amp;text=<%= url_encode(@post.title)%>&amp;via=jisiguo" class="tweet" target="_blank" data-via="jisiguo" data-count="none"><span class="typcn typcn-social-twitter"><span></a>
	</div>
	<h1 class="post-title"><%= @post.title %></h1>
	<div class="post-body">
		<%= markdown(@post.body) %>
		<hr/>
		<p><%= link_to("Jisi Guo", about_path) %> is an entrepreneur and designer/developer. If you enjoyed this post, you should follow him on Twitter <a href="https://twitter.com/jisiguo" target="_blank">here</a>.</p>
	</div>
</article>
<%= render 'posts/disqus' %>