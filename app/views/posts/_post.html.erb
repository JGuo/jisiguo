<article class="index-post">
	<%= link_to(post_path(post), class:"article-link") do %>
		<div class="post-date">
			<span class="stamp-month"><%= post.created_at.localtime.strftime("%b") %></span>
			<span class="stamp-date"><%= post.created_at.localtime.day %></span>
		</div>
		<h1 class="post-title"><%= post.title %></h1>
		<div class="post-body"><%= markdown(truncate(post.body, :length => 270)) %></div>
	<% end %>
</article>